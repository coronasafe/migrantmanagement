<section class="max-w-xl">
    <%= simple_form_for @migrant, defaults: { input_html: {class: 'form-input mt-1 font-sans'}, wrapper_html: {class: 'flex flex-col my-4'}, label_html: {class: 'mb-1'}} do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="pt-2">
        <%= f.input :name %>
        <%= f.input :aadhar_id %>
        <%= f.input :employer_name %>
    </div>

    <div class="pt-4">
        <%= f.input :local_residence %>
        <%= f.association :state, collection: State.all(), input_html: {class: 'form-select'} %>
        <%= f.association :district, collection: State.all(), input_html: {class: 'form-select'} %>
        <%= f.association :panchayat, collection: State.all(), input_html: {class: 'form-select'} %>
    </div>

    <div class="pt-2">
        <%= f.input :can_speak_local_language, input_html: {class: 'form-checkbox'} %>
        <%= f.input :has_labour_department_reached, input_html: {class: 'form-checkbox'} %>
    </div>

    <div class="pt-4">
        <%= f.button :submit, "Register",class: 'p-2 rounded-md bg-gray-900 text-white shadow-md'  %>
    </div>
    <% end %>

</section>
